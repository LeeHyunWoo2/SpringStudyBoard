<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <!-- mapper 인터페이스의 sql 처리용 코드 -->
  <mapper namespace="org.zerock.mapper.BoardMapper"> <!-- 패키지 인터페이스명 -->
  	<select id="getList" resultType="org.zerock.domain.BoardVO"> <!-- id:메서드명, resultType:객체 -->
  	<![CDATA[
  		select * from tbl_board where bno > 0
  		]]> <!-- CDATA 사용 이유는 부등호인지 문자인지 xml에서 판단하지말고 DB로 그대로 넘기라는 뜻 (문자처리)-->
  	</select>
  
  <insert id="insert">
  	<![CDATA[
  		insert into tbl_board(bno, title, content, writer)
  		values (seq_board.nextval, #{title}, #{content}, #{writer})
  	]]>
  </insert>
  
  <insert id="insertSelectKey">
  	<selectKey keyProperty="bno" order="BEFORE" resultType="long">
  		select seq_board.nextval from dual
  	</selectKey> <!-- insert 전에 번호를 미리 만들어놓음 -->
  
  	<![CDATA[
		insert into tbl_board(bno, title, content, writer)
  		values (seq_board.nextval, #{title}, #{content}, #{writer})
	]]>
  </insert>
  
  <select id="read" resultType="org.zerock.domain.BoardVO">
  	<![CDATA[
		select * from tbl_board where bno = #{bno}
	]]> <!-- bno와 같은 테이블에 모든 정보를 가져와 객체화 시키라는 코드 -->
  </select>
  
  <update id="update">
  <![CDATA[
  	update tbl_board set title=#{title}, content=#{content}, writer=#{writer}, updateDate= sysdate
  	where bno = #{bno}
	]]>
  </update>
  
  <delete id="delete">
  <![CDATA[
		delete from tbl_board where bno = #{bno}
	]]> <!-- 번호를 조건으로 레코드(DB의 행 1개)를 삭제한다. -->
  </delete>
  
  
  
  </mapper>